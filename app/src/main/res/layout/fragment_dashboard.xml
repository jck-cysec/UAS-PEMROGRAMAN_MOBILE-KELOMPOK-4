<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgLight"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Section: Greeting -->
        <LinearLayout
            android:id="@+id/layoutGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/bg_greeting_rounded"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgProfileIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_circle_white"
                android:scaleType="centerCrop"
                android:contentDescription="Foto Profil" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvGreetingName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hai, User"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGreetingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumat, 1 Agustus 2025"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Statistik Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistik Tugas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvTotalTodos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: -"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvDoneTodos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai: -"
                android:textSize="16sp"
                android:textColor="@color/successGreen"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvUndoneTodos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Selesai: -"
                android:textSize="16sp"
                android:textColor="@color/dangerRed"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvNextDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline Terdekat: -"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Pie Chart Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distribusi Tugas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
