<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bgLight"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvCalendarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalender Tugas"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primaryDark"
        android:layout_marginBottom="16dp" />

    <!-- CardView Calendar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:backgroundTint="@android:color/white"
        android:elevation="4dp">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
            android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Small" />
    </androidx.cardview.widget.CardView>

    <!-- Info tanggal terpilih -->
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tugas pada tanggal: -"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="#555555"
        android:padding="4dp"
        android:layout_marginBottom="12dp" />

    <!-- RecyclerView daftar tugas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTodosCalendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="4dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never" />
</LinearLayout>
