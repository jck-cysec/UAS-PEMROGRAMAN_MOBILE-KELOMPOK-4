<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Judul + Checkbox -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTodoTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Judul To-do"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <CheckBox
                android:id="@+id/cbDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_checkmark"
                android:buttonTint="@color/primaryDark"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Deadline -->
        <TextView
            android:id="@+id/tvTodoDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline: 2025-08-01 18:00"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <!-- Status & Priority Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTodoStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textColor="#333333"
                android:background="@drawable/bg_status_progress"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:textSize="12sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="#ffffff"
                android:background="@drawable/bg_priority_high"/>
        </LinearLayout>

        <!-- Tombol Hapus -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:textSize="12sp"
            android:backgroundTint="#F8D7DA"
            android:textColor="#721C24"
            android:layout_marginTop="12dp"
            android:elevation="1dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
